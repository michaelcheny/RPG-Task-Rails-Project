<fieldset>

  <legend><h3>Your progress</h3></legend>

  <p>Total Completed Tasks: <%= @user.tasks.finished.count %></p>
  <p>Tasks Completed Today: <%= @user.tasks.completed_today.count %></p>

  <p>Top Skill: <%= UserSkill.top_skill_by_user(@user).first.skill.name %></p>

      

  <%= render 'user_skill_table', user: @user %>

</fieldset>


<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">

        <h3 class="card-header">Incomplete Tasks</h3>
        <p class="card-text"><%= render 'tasks/incomplete_tasks', tasks: @user.tasks.last_five %></p>
      
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">

        <h3 class="card-header">Completed Tasks</h3>
        <p class="card-text"><%= render 'tasks/completed_tasks', tasks: @user.tasks.last_five %></p>
      
      </div>
    </div>
  </div>
</div>
 

