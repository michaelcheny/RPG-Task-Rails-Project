<table class="table table-hover table-sm table-bordered">
  
  <thead class="thead-light">
    <tr>
      <th scope="col">Skills:</th>

      <% user.user_skills.each do |user_skill| %>

        <th scope="col" data-toggle="tooltip" title="<%= user_skill.skill.description %>"><%= user_skill.skill.name %></th>

      <% end %>
    </tr>
  </thead>
  <tr>
    <td class = "skill_name">Level:</td>

    <% user.user_skills.each do |user_skill| %>

      <td><%= user_skill.level  %></td>
        
    <% end %>
  </tr>

  <tr>
    <td class = "skill_name">Exp:</td>

    <% user.user_skills.each do |user_skill| %>

      <td><%= user_skill.experience_pts  %></td>
        
    <% end %>
  </tr>

</table>