
<%= form_with model: user, class: "user_form", local: true do |f| %>

  <%= f.text_field :email, placeholder: "Email" %> <br>
  <%= f.text_field :username, placeholder: "Username" %> <br>
  <%= f.password_field :password, placeholder: "Password" %> <br>
  <%= f.password_field :password_confirmation, placeholder: "Password again" %> <br> <br>

  <%= f.submit class: "btn btn-secondary btn-sm" %>

<% end %>