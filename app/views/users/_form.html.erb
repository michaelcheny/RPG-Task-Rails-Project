
<%= form_with model: user, local: true do |f| %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: "Email (example@example.com)", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "Username (minimum of 2 letters, please be appropriate)", class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Password (between 6-20 letters)", class: "form-control", required: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "Password again (between 6-20 letters)", class: "form-control", required: true %> 
  </div>
  
  <%= f.submit class: "btn btn-primary" %>

<% end %>