<h3 class="title text-center">Overall Highscores</h3>

<table class="table table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Total Level</th>
      <th>Total Exp</th>
    </tr>
  </thead>

  <% sort_by_total_exp(@users).each.with_index do |user, index| %>

    <tr>
      <td><%= index += 1 %></td>
      <td><%= link_to user.username, user_path(user) %></td>
      <td><%= user.total_level %></td>
      <td><%= user.total_exp_pts %></td>
    </tr>

  <% end %>
    
</table>
