<h3 class="title text-center">Login</h3>

<%= form_tag login_path do %>

  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, "", placeholder: "Enter Username", class: "form-control", required: true %> 
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", placeholder: "Enter Password", class: "form-control", required: true %> 
  </div>

  <%= submit_tag "Log In", class: "btn btn-primary" %>

  <%= link_to 'Log in using Google', '/auth/google_oauth2', method: :post, class: "btn btn-secondary" %>
  
<% end %>

