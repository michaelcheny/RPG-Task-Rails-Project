<% if tasks.finished.any? %>
  <% tasks.finished.each do |task| %>
    <div class="card">
      <div class="card-header font-weight-bold"><%= link_to task.name, user_task_path(task.user, task) %><%= show_edit_button_for_task(task) %></div>
      <div class="card-body">
        <p class="card-text"><%= task.description %></p>
      </div>

      <div class="card-body">
        <p class="card-text"><%= calculate_points(task) %> exp gained for:</p>
        <%= render 'shared/affiliated_skills', object: task %>
      </div>
      
      <div class="card-footer text-muted">
        <%= show_task_user(task) %>
        <span class="float-left"><%= task.duration %> minute total</span>
        <span class="float-right"><%= task.completion_time %></span>
      </div>
    </div><br>
  <% end %>

<% else %>
  <h3 class="card-body">None at the moment.</h3>
<% end %>