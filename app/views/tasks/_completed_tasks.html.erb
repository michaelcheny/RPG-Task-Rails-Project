<% if tasks.finished.any? %>
    
  <% tasks.finished.each do |task| %>

    <div class="container">

      <p>name: <%= link_to task.name, user_task_path(task.user, task) %></p>
      <p>desc: <%= task.description %></p>
      <p>dif lvl: <%= task.difficulty_level %> | pri lvl: <%= task.priority_level %></p>
      <p>Points for completing: <%= calculate_points(task) %></p>
      <p>Completed on: <%= task.completion_time %></p>
      <p>Duration: <%= task.duration %> minutes</p>
        
      <p><%= show_task_user(task) %></p>
      <%= show_edit_button_for_task(task) %> 
    </div>

  <% end %>

<% else %>

  <h3>None</h3>

<% end %>