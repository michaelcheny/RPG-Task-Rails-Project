<h3>Tasks</h3>

  <% @tasks.each do |task| %>
    <div class="container">
      <p>name: <%= link_to task.name, edit_user_task_path(task.user, task) %></p>
      <p>desc: <%= task.description %></p>
      <p>dif lvl: <%= task.difficulty_level %></p>
      <p>pri lvl: <%= task.priority_level %></p>
      <p>completed? <%= task.completed %></p>
      <p><%= show_task_user(task) %></p>
    </div>
  <% end %>
