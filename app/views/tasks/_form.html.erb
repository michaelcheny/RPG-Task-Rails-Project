<%= form_with model: [task.user, task], local: true do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Run hills with dog", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "High intensity interval sprints with my doge.", class: "form-control" %>
  </div>

  <p><%= render 'shared/select_drop_down', f: f, object: :priority_level, range: (1..10) %></p>

  <p><%= render 'shared/select_drop_down', f: f, object: :difficulty_level, range: (1..10) %></p>

  <p>Pick the skills that are associated with this task to train:</p>

  <%= render 'shared/collection_checkboxes', f: f, object: task.user.skills.all %>

  <%= f.submit class: "btn btn-secondary" %> <%= show_delete_button_for_task(task) %>

<% end %>


