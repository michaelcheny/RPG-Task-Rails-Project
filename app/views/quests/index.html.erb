<% if params[:user_id] %>

  <h3 class="title text-center"> Your Quest Log</h3>

  <%= render 'quests/incomplete_complete_quests', user: @user  %>

<% else %>

  <h3 class="title text-center">Available Quests</h3>

  <%= render 'quests/all_quests', quests: @quests.sort_by_level_requirement %>

<% end %>

