<% if user.user_quests %>
  <% user.user_quests.reverse.each do |user_quest| %>

    <div class="card">
    
      <div class="card-header"><%= user_quest.quest.name %> <span class="float-sm-right">Level Requirement: <%= user_quest.quest.level_requirement %></span></div>
    
      <div class="card-body">
          <p class="card-text"><%= user_quest.quest.description %></p>
      </div>
    
      <div class="card-body">
        <p class="card-text"><%= calculate_points_for_quest(user_quest.quest) %> Exp for:</p>
          <%= render 'shared/affiliated_skills', object: user_quest.quest %>
      </div>

      <div class="card-footer text-muted">
        <%= quest_footer_for_quest(user_quest) %>
      </div>

    </div><br>
  <% end %>

<% else %>
  <h3>Go check out the quest bulletin to add a quest.</h3>
<% end %>