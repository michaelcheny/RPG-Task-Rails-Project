<% if quests.any? %>

  <% quests.reverse.each do |quest| %>

    <div class="card">
      <div class="card-header"><span class="font-weight-bold"><%= quest.quest.name %></span> <span class="float-sm-right">Quest Level: <%= quest.quest.level_requirement %></span></div>

        <div class="card-body">
          <p class="card-text"><%= quest.quest.description %></p>
        </div>

        <div class="card-body">
          <p class="card-text"><%= calculate_points_for_quest(quest.quest) %> Exp for:</p>
          <%= render 'shared/affiliated_skills', object: quest.quest %>
        </div>
                
        <div class="card-footer text-muted">
          <%= quest_footer_for_show_dash(quest) %>
        </div>
          
      </div><br>

  <% end %>
  
<% else %>

  <h3 class="text-center">None at the moment</h3>
  
<% end %>